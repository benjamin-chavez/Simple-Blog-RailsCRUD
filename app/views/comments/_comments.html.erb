<h3>Comments</h3>
<% @post.comments.each do |comment| %>
<div class="card card-body">
    <p><strong><%= comment.username %></strong>:
        <%= comment.body %><br>
        <%= link_to 'Remove Comment', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure you wish to delete' } %>
    </p>
</div>
<br>
<% end %>